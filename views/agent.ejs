<%- contentFor('footer') %>


<script src="https://maps.googleapis.com/maps/api/js?key=<%= GOOGLE_MAP_API_KEY %>&libraries=places&callback=initAutocomplete" async defer></script>

<script>
    function initAutocomplete() {
        var input = document.getElementById('address');
        var options = {
          componentRestrictions: {country: 'fr'}
        };
        var autocomplete = new google.maps.places.Autocomplete(input,options);
        //on place change
        autocomplete.addListener('place_changed', function() {
            var place = autocomplete.getPlace();

            for (var i = 0; i < place.address_components.length; i++) {
                console.log(place.address_components[i]);
                var addressType = place.address_components[i].types[0];
                if (addressType == 'postal_code') {
                    $('#postal_code').val(place.address_components[i].long_name);
                }
                if (addressType == 'locality') {
                    $('#locality').val(place.address_components[i].long_name);
                }
                if (addressType == 'route') {
                    $('#route').val(place.address_components[i].long_name);
                }
                if (addressType == 'street_number') {
                    $('#street_number').val(place.address_components[i].long_name);
                }
                //sometimes it is not necessary to have street_number

            }
            //set lat and lng

            //set lat and lng
            $('#lat').val(place.geometry.location.lat());
            $('#lng').val(place.geometry.location.lng());
        });
    }
    
</script>

<script>
    // Masking function
    function maskPhoneNumber(event) {
        let inputValue = event.target.value.replace(/\D/g, '');
        //if length greater than 10 trim
        if (inputValue.length > 10) {
            inputValue = inputValue.slice(0, 10);
        }
        let formattedValue = inputValue.replace(/(\d{2})(\d{2})?(\d{2})?(\d{2})?(\d{2})?/, function(match, p1, p2, p3, p4, p5) {
            let parts = [p1];
            if (p2) parts.push(p2);
            if (p3) parts.push(p3);
            if (p4) parts.push(p4);
            if (p5) parts.push(p5);
            return parts.join(' ');
        });
        event.target.value = formattedValue;
    }
    $(document).ready(function() {
        // Attach maskPhoneNumber function to the input field
        document.getElementById('phone').addEventListener('input', maskPhoneNumber);

        $("#condition3").on("change", function() {
            if($(this).is(":checked")) {
                $(".full_name").text($("#first_name").val() + " " + $("#last_name").val());
                $("#chart_modal").modal("show");  
                if ($("#chart_modal input[type='checkbox']:checked").length == 6) {
                    $("#chart_modal .btn-submit").prop("disabled", false);
                } else {
                    $("#chart_modal .btn-submit").prop("disabled", true);
                    $("#condition3").prop("checked", false);

                }  
            } 
        });

        $("#chart_modal input[type='checkbox']").on("change", function() {
            if($("#chart_modal input[type='checkbox']:checked").length == 6) {
                $("#chart_modal .btn-submit").prop("disabled", false);
            } else {
                $("#chart_modal .btn-submit").prop("disabled", true);
            }
        });

        $(".chart-ok").on("click", function() {
            $("#condition3").prop("checked", true);
            $("#chart_modal").modal("hide");
        });
    });
    
</script>