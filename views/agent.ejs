
<div class="container">
    <form class="mt-4" method="post" action="/agent">

    <div class="row mt-4  h-100">
        <div class="col-md-12">
            <h3>
                <a class="text-decoration-none" href="/">Tableau de bord</a> / Ajouter un Agent
            </h3>
        </div>
        <div class="col-md-6 m-auto">
            <!-- error message -->
            <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= error.msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                <% }) %>
            <% } %>

            <!-- success message -->
            <% if(typeof success_msg != 'undefined') { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
            <% } %>

            <!-- add agent form -->
            <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            
                            <div class="form-group mt-3">
                                <label for="first_name">Prénom<sup>*</sup></label>
                                <input type="text" class="form-control" name="first_name" id="first_name"  placeholder="Entrez votre prénom" value="<%= typeof first_name != 'undefined' ? first_name : '' %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            
                            <div class="form-group mt-3">
                                <label for="last_name">Nom de famille<sup>*</sup></label>
                                <input type="text" class="form-control" name="last_name" id="last_name"  placeholder="Entrer le nom de famille" value="<%= typeof last_name != 'undefined' ? last_name : '' %>">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="email">E-mail<sup>*</sup></label>
                        <input type="email" class="form-control" name="email" id="email"  placeholder="Entrez l'e-mail" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mt-3">
                                <label for="password">Mot de passe<sup>*</sup></label>
                                <input required  type="password" class="form-control" name="password" id="password"  placeholder="Entrer le mot de passe" value="<%= typeof password != 'undefined' ? password : '' %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            
                            <div class="form-group mt-3">
                                <label for="phone">Téléphone<sup>*</sup></label>
                                <input required  type="tel" pattern="[0-9]{2} [0-9]{2} [0-9]{2} [0-9]{2} [0-9]{2}" class="form-control" name="phone" id="phone"  placeholder="Entrez le téléphone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="address">Adresse<sup>*</sup></label>
                        <input type="text" class="form-control" name="address" id="address"  placeholder="Entrer l'adresse" value="<%= typeof address != 'undefined' ? address : '' %>">
                        <input type="hidden" name="lat" id="lat" value="<%= typeof lat != 'undefined' ? lat : '' %>">
                        <input type="hidden" name="lng" id="lng" value="<%= typeof lng != 'undefined' ? lng : '' %>">
                    </div>
                    <div class="form-group mt-3">
                        <label for="distance">Distance que j'accepte de parcourir (kms)<sup>*</sup></label>
                        <input type="number" class="form-control" name="distance" id="distance"  placeholder="Entrez la distance (km)" value="<%= typeof distance != 'undefined' ? distance : '10' %>">
                    </div>
                    <div class="form-group mt-3">
                        <a class="btn btn-info" href="#" onclick="selectTimeSlot()">Disponibilités</a>
                        <input type="hidden" name="availibility" id="availibility" value="<%= typeof availibility != 'undefined' ? availibility : '' %>">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mt-3">
                                <label for="customer-rating">Évaluation du client</label>
                                <select class="form-control" name="customer_rating" id="customer_rating">
                                    <option value="1" <%= typeof customer_rating != 'undefined' && customer_rating == 1 ? 'selected' : '' %>>1 Star</option>
                                    <option value="2" <%= typeof customer_rating != 'undefined' && customer_rating == 2 ? 'selected' : '' %>>2 Star</option>
                                    <option value="3" <%= typeof customer_rating != 'undefined' && customer_rating == 3 ? 'selected' : '' %>>3 Star</option>
                                    <option value="4" <%= typeof customer_rating != 'undefined' && customer_rating == 4 ? 'selected' : '' %>>4 Star</option>
                                    <option value="5" <%= typeof customer_rating != 'undefined' && customer_rating == 5 ? 'selected' : '' %>>5 Star</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mt-3">
                                <label for="reliability">Fiabilité</label>
                                <select class="form-control" name="reliability" id="reliability">
                                    <option value="1" <%= typeof reliability != 'undefined' && reliability == 1 ? 'selected' : '' %>>1 Star</option>
                                    <option value="2" <%= typeof reliability != 'undefined' && reliability == 2 ? 'selected' : '' %>>2 Star</option>
                                    <option value="3" <%= typeof reliability != 'undefined' && reliability == 3 ? 'selected' : '' %>>3 Star</option>
                                    <option value="4" <%= typeof reliability != 'undefined' && reliability == 4 ? 'selected' : '' %>>4 Star</option>
                                    <option value="5" <%= typeof reliability != 'undefined' && reliability == 5 ? 'selected' : '' %>>5 Star</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="order_qty">Quantité de commande réussie</label>
                        <input type="number" class="form-control" name="order_qty" id="order_qty"  placeholder="Entrez la quantité commandée" value="<%= typeof order_qty != 'undefined' ? order_qty : '' %>">
                    </div>

                    <div class="form-group mt-3">
                        <input required type="checkbox" id="condition1" name="condition1" value="1" <% if(typeof condition1 != 'undefined' && condition1 == 1) { %> checked <% } %> >
                         
                        <label for="condition1">J’ai lu et j’accepte les <a href="javascript:void(0)"  data-bs-toggle="modal" data-bs-target="#condition1_modal">conditions générales d‘utilisation</a></label>
                    </div>
                    <div class="form-group mt-3">
                        <input required type="checkbox" id="condition2" name="condition2" value="1" <% if(typeof condition2 != 'undefined' && condition2 == 1) { %> checked <% } %> >
                         
                        <label for="condition2">J’ai lu et j’accepte les <a href="javascript:void(0)"  data-bs-toggle="modal" data-bs-target="#condition2_modal">conditions générales de vente</a></label>
                    </div>
                    <div class="form-group mt-3">
                        <input required type="checkbox" id="condition3" name="condition3" value="1" <% if(typeof condition3 != 'undefined' && condition3 == 1) { %> checked <% } %> >
                        <label for="condition3">Je m'engage à suivre <a href="javascript:void(0)"  data-bs-toggle="modal" data-bs-target="#condition3_modal">la charte</a></label>
                    </div> 
                    <div class="form-group mt-3">
                        <input  type="checkbox" id="hd_camera" name="hd_camera" value="1" <% if(typeof hd_camera != 'undefined' && hd_camera == 1) { %> checked <% } %>>
                        <label for="hd_camera">Mon téléphone portable dispose d'une camera HD ou supérieure.</label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mt-4 w-100 btn-submit">Valider</button>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-3">
                <label>N° et rue</label>
                <input type="text" class="form-control" id="street_number" name="street_number" readonly value="<%= typeof street_number != 'undefined' ? street_number : '' %>">
            </div> 
            <div class="form-group mt-3">
                <label>Complément d’adresse</label>
                <input type="text" class="form-control" id="route" name="route"  readonly value="<%= typeof route != 'undefined' ? route : '' %>">
            </div>
            <div class="form-group mt-3">
                <label>Code postal</label>
                <input type="text" class="form-control" id="postal_code" name="postal_code"  readonly value="<%= typeof postal_code != 'undefined' ? postal_code : '' %>">
            </div>
            <div class="form-group mt-3">
                <label>Ville</label>
                <input type="text" class="form-control" id="locality" name="locality" readonly value="<%= typeof locality != 'undefined' ? locality : '' %>">
            </div>
        </div>
    </div>
    </form>

</div>
